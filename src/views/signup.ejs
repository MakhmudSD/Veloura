<%- include('includes/header') %>

  <link rel="stylesheet" type="text/css" href="/css/signup.css" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js"></script>

  <body>
    <div class="signup-container">
      <form onsubmit="return validateSignupForm()" action="/admin/signup" method="POST" enctype="multipart/form-data">
        <div class="anime-sphere" id="sphere-animation">
          <div class="sphere-dot"></div>
        </div>
        <div class="signup-frame" style="width: 650px">
          <div class="signup-top">
            <span>Veloura Signup</span>
          </div>

          <div class="sign-input-frame" style="justify-content: space-between">
            <div class="sign-up-part">
              <label>Admin Name *</label>
              <input type="text" name="memberNick" class="member-nick" placeholder="Username" value="" />
            </div>
            <div class="sign-up-part">
              <label>Phone *</label>
              <input type="text" name="memberPhone" class="member-phone" placeholder="Phone" value="" />
            </div>
          </div>
          <div class="sign-input-frame" style="justify-content: space-between">
            <div class="sign-up-part">
              <label>Password *</label>
              <input type="password" name="memberPassword" class="member-password" placeholder="Password" value="" />
            </div>
            <div class="sign-up-part">
              <label>Repeat password *</label>
              <input type="password" name="confirmPassword" class="confirm-password" placeholder="Repeat password"
                value="" />
            </div>
          </div>

          <div class="signup-input-frame">
            <div class="media-frame">
              <img class="upload-img-frame" src="/img/default.webp" />
              <div class="upload-container">
                <span class="media-text">Shop image</span>
                <div class="file-box bs3-primary preview-image" style="margin-top: 30px; display: flex">
                  <input class="upload-name" value="Choose image" disabled="disabled" />
                  <label for="input-file" class="file-input-label">Upload Image</label>
                  <input type="file" id="input-file" class="upload-hidden form-control-file shopImage"
                    name="shopImage" />
                </div>
                <p class="thumbnail-desc">
                  Please upload a shop image.<br />
                  Only the following formats are allowed: .jpg, .jpeg, .webp, or .png.<br />
                </p>
              </div>
            </div>
          </div>

          <input name="memberType" value="ADMIN" hidden />

          <button class="signup-btn btn" name="signup" type="submit">
            Signup
          </button>

          <div class="bottom-links-wrapper">
            <div class="bottom-links">
              <div class="go-back">Go back <a href="/admin">Home</a></div>
              <p>
                Already signed up?
                <a href="/admin/login">Login</a>
              </p>
            </div>
          </div>


        </div>
      </form>
    </div>

    <script type="text/javascript" src="/js/signup.js"></script>
  </body>

  <%- include('includes/footer') %>